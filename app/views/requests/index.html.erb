<p id="notice"><%= notice %></p>

<h1>Support Requests</h1>

<%= link_to 'New Request', new_request_path %>

<%= form_tag(requests_path, :method => "get", class: "navbar-form", id: "search-form") do %>
  <div class="input-append">
    <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search Articles" %>
    <!-- In order to have the "search" icon int the button, we need to use plain HTML instead 
         of using a Rails form helper -->
    <button class="btn" type="submit">Search Requests</button>
  </div>
<% end %>



<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Department</th>
      <th>Message</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr class="<%= cycle('oddrow', 'evenrow') -%>">
        <td><%= request.name %></td>
        <td><%= request.email %></td>
        <td><%= request.department %></td>
        <td><%= request.message %></td>

        <td><%= button_to 'Edit', edit_request_path(request),method: :get %></td>
        <td><%= button_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= request.done ? (button_to 'Done', action = mark_request_path(request.id)) : (button_to 'Not Done', action = mark_request_path(request.id)) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @requests %>


